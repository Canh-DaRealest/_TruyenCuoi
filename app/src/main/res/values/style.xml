<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableTint">@color/black</item>

    </style>

    <style name="waveriple" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="rippleColor">@color/gray_light</item>
        <item name="mrl_rippleDuration">300</item>
        <item name="mrl_rippleFadeDuration">100</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_ripplePersistent">true</item>

    </style>

    <style name="switchcompat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/red</item>


    </style>

    <style name="serachviewcolor">
        <item name="android:textColorHint">@color/textColor</item>

    </style>
</resources>